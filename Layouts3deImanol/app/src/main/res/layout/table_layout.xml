<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="1">

    <TableRow android:background="#128675">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Producto"
            android:textColor="@android:color/white"
        ></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="Subtotal"
            android:textColor="@android:color/white"
            ></TextView>
    </TableRow>
    <TableRow android:background="#CECECE">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Jabón de manos x 1"
            android:textColor="@color/black"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="2€"
            android:textColor="@color/black"></TextView>
    </TableRow>

    <TableRow android:background="#FFFFFF">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Shampoo Alpecin x 1"
            android:textColor="#09C3FF"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="10€"
            android:textColor="@color/black"></TextView>
    </TableRow>

    <TableRow android:background="#CECECE">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Pastas Layana x 2"
            android:textColor="@color/black"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="18€"
            android:textColor="@color/black"></TextView>
    </TableRow>

    <TableRow android:background="#FFFFFF">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Detergente Tucolor x 1"
            android:textColor="#AA1703"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="13,4€"
            android:textColor="@color/black"></TextView>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090"/>

    <TableRow android:background="#FFFFFF">
        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="Subtotal"
            android:textColor="#128675"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="43,4€"
            android:textColor="@color/black"></TextView>
    </TableRow>

    <TableRow android:background="#FFFFFF">
        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="Costo envío"
            android:textColor="#128675"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="10€"
            android:textColor="@color/black"></TextView>
    </TableRow>

    <TableRow android:background="#FFFFFF">
        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="Cupón"
            android:textColor="#128675"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="-5€"
            android:textColor="@color/black"></TextView>
    </TableRow>

    <TableRow android:background="#FFFFFF">
        <TextView
            android:layout_column="1"
            android:padding="3dip"
            android:text="Total"
            android:textColor="#128675"></TextView>

        <TextView
            android:layout_column="2"
            android:padding="3dip"
            android:text="48,4€"
            android:textColor="@color/black"></TextView>
    </TableRow>
</TableLayout>